@using E_Commerce.Models
@model List<Product>
@{
    ViewBag.Title = "Products";
}

<h2>Products</h2>
<a href="/Panel/Products/Create" class="btn btn-primary">Add New Product</a>
<table>
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.Name</th>
                <th>
                    <a href="/Panel/Products/Edit/@item.Id" class="btn btn-warning">Edit</a>
                    <span class="btn btn-danger del" rel="@item.Id" >Delete</span>
                </th>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $(".del").click(function () {
            var btn = $(this);
            var id = btn.attr("rel")
            $.ajax({
                url: "Panel/Products/Delete" + id,
                method: "POST",
                success: function isDeleted() {
                    if (isDeleted)
                        btn.parent().parent().slideUp("slow");
                    else
                        alert("An error has occured");

                }
            });

        });

    });
</script>

